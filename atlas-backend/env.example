# Atlas Study Backend Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
APP_NAME="Atlas Study API"
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=postgresql://user:password@localhost/atlas_study_dev

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_HOSTS=["*"]

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth (Get from Apple Developer)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# SendGrid (Get from SendGrid Dashboard)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@atlasstudy.app

# Canvas LMS
CANVAS_API_URL=https://your-school.instructure.com/api/v1

# Google Calendar
GOOGLE_CALENDAR_API_URL=https://www.googleapis.com/calendar/v3
